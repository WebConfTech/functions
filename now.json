{
  "version": 2,
  "name": "functions",
  "alias": ["api.webconf.tech"],
  "builds": [
    {
      "src": "lambdas/*.js",
      "use": "@now/node"
    },
    {
      "src": "templates/*.html",
      "use": "@now/static"
    },
    {
      "src": "templates/*.txt",
      "use": "@now/static"
    }
  ],
  "routes": [
    {
      "src": "/lambdas/mail_save",
      "dest": "/lambdas/mail_save.js"
    },
    {
      "src": "/lambdas/mail_send",
      "dest": "/lambdas/mail_send.js"
    },
    {
      "src": "/lambdas/mail_unsubscribe",
      "dest": "/lambdas/mail_unsubscribe.js"
    },
    {
      "src": "/cfp/search",
      "dest": "/lambdas/cfp_search.js"
    },
    {
      "src": "/ping",
      "dest": "/lambdas/ping.js"
    }
  ],
  "env": {
    "HOST": "https://api.webconf.tech",
    "MAILGUN_API_KEY": "@production-functions-mailgun-api-key",
    "MAILGUN_DOMAIN": "@production-functions-mailgun-domain",
    "MAILGUN_LIST": "@production-functions-mailgun-list",
    "MAILGUN_SEND_SECRET": "@production-functions-send-secret",
    "STAGING_HOST": "https://api.webconf.tech",
    "STAGING_MAILGUN_API_KEY": "@staging-functions-mailgun-api-key",
    "STAGING_MAILGUN_DOMAIN": "@staging-functions-mailgun-domain",
    "STAGING_MAILGUN_LIST": "@staging-functions-mailgun-list",
    "STAGING_MAILGUN_SEND_SECRET": "@staging-functions-send-secret",
    "TWITTER_CONSUMER_KEY": "@production-functions-twitter-consumer-key",
    "TWITTER_CONSUMER_SECRET": "@production-functions-twitter-consumer-secret",
    "TWITTER_ACCESS_TOKEN": "@production-functions-twitter-access-token",
    "TWITTER_ACCESS_TOKEN_SECRET": "@production-functions-twitter-access-token-secret",
    "FIREBASE_PROJECT_ID": "@production-firebase-project-id",
    "FIREBASE_PRIVATE_KEY_ID": "@production-firebase-private-key-id",
    "FIREBASE_PRIVATE_KEY": "@production-firebase-private-key",
    "FIREBASE_CLIENT_EMAIL": "@production-firebase-client-email",
    "FIREBASE_CLIENT_ID": "@production-firebase-client-id"
  }
}
