{
  "name": "functions",
  "version": "0.0.2",
  "description": "A collection of lambdas services for the CoDeAr & WebConf.",
  "repository": "somoscodear/functions",
  "author": "CoDeAr <hola@codear.org>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean-deploys": "now rm $NOW_NAME --safe --token=$NOW_TOKEN --team=$NOW_TEAM --yes",
    "deploy": "now alias $(now --name=$NOW_NAME -e MAILGUN_API_KEY=$MAILGUN_API_KEY -e MAILGUN_DOMAIN=$MAILGUN_DOMAIN -e MAILGUN_LIST=$MAILGUN_LIST --token=$NOW_TOKEN --team=$NOW_TEAM) $NOW_INSTANCE_NAME --token=$NOW_TOKEN --team=$NOW_TEAM",
    "scale": "now scale $NOW_NAME.now.sh sfo 1 --token=$NOW_TOKEN --team=$NOW_TEAM",
    "start": "now dev",
    "test": "echo \"Write tests! -> D:\"",
    "lint": "eslint ./ --ext .js"
  },
  "dependencies": {
    "firebase-admin": "^8.8.0",
    "mailgun-js": "^0.22.0",
    "micro": "^9.3.4",
    "micro-cors-multiple-allow-origin": "^1.0.1",
    "micro-upload": "^1.0.1",
    "mjml": "^4.5.1",
    "node-fetch": "^2.6.0",
    "statuses": "^1.5.0",
    "twit": "^2.2.11"
  },
  "devDependencies": {
    "husky": "^3.1.0",
    "micro-dev": "^3.0.0",
    "now": "^16.7.0",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-node": "^10.0.0",
    "lint-staged": "^9.5.0"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
